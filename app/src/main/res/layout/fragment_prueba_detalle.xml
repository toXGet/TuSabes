<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:fillViewport="true"
    tools:context=".PruebaDetalleFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prueba_detalle_titulo"
            android:textColor="@color/teal_700"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvIdPruebaDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id. Prueba"
            android:layout_gravity="end"/>
        <TextView
            android:id="@+id/tvPruebaFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:layout_gravity="end"
            android:textColor="@color/teal_700"/>
        <TextView
            android:id="@+id/tvPruebaResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado"
            android:layout_gravity="end"/>
        <TextView
            android:id="@+id/tvPruebaPreguntaCuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pregunta 1 de N"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/blue_700"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btnAnteriorPregunta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_play"
                android:rotation="180"
                android:backgroundTint="@color/teal_200"
                app:tint="@color/teal_700"
                android:tooltipText="@string/btn_anterior_prueba"/>
            <ImageButton
                android:id="@+id/btnSiguientePregunta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_play"
                android:backgroundTint="@color/teal_200"
                app:tint="@color/teal_700"
                android:tooltipText="@string/btn_siguiente_prueba"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvEnunciadoPreguntaPrueba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enunciado"
            android:maxLines="4"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginVertical="5dp"
            android:textSize="15sp"/>
        <RadioGroup
            android:id="@+id/rgGrupoOpciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rOpcion1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opcion 1"/>
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rOpcion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opcion 2"/>
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rOpcion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opcion 3"/>
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rOpcion4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opcion 4"/>
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rOpcion5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opcion 5"/>
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btnPresentarPrueba"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_presentar_prueba"
                android:layout_marginHorizontal="5dp"/>
            <Button
                android:id="@+id/btnCancelarPrueba"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_cancelar_pregunta"
                android:backgroundTint="@color/red_700"
                android:layout_marginHorizontal="5dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>