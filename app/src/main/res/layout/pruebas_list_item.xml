<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/itempruebas"
        android:layout_marginHorizontal="10dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tvIdPrueba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id Prueba"
            android:layout_gravity="end"/>
        <TextView
            android:id="@+id/tvFechaHoraPrueba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha-Hora"
            android:textColor="@color/teal_200"/>
        <TextView
            android:id="@+id/tvResuelto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resuelto-NoResuelto"
            android:textColor="@color/teal_700"

            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvNota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nota"
            android:textColor="@color/teal_700"/>

    </LinearLayout>



</LinearLayout>